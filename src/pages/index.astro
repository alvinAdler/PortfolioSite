---
import BaseLayout from "../layouts/BaseLayout.astro";
import {Icon} from 'astro-icon'
---

<style>
	.main-header{
		min-height: 100vh;
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		row-gap: 5rem;
	}

	.main-header > h1{
		text-align: center;
	}

	.main-nav{
		display: flex;
		flex-flow: row wrap;
		justify-content: space-evenly;
		width: min(40rem, 80%);
		align-items: stretch;
		gap: 1.5rem 2rem;
		/* border: 3px solid red; */
	}

	:global(.main-nav > a){
		padding: 0.5rem;
		border: 2px solid transparent;
		display: flex;
		flex-flow: row nowrap;
		justify-content: center;
		align-items: center;
		column-gap: 0.5rem;
		text-decoration: none;
		flex: 1 0 0;
		white-space: nowrap;
		transition: 100ms all ease-in;
	}

	.nav-icon{
		width: 2rem;
		aspect-ratio: 1 / 1;
	}
</style>

<BaseLayout pageTitle="Portfolio Site">
	<header class="main-header">
		<h1>Alvin Adler <br/> Web Developer</h1>
		<nav class="main-nav">
			<a href="#" class="color-about-me"><Icon name="mdi:face-man" class="nav-icon"/>About Me</a>
			<a href="#" class="color-projects"><Icon name="mdi:trophy" class="nav-icon"/>Projects</a>
			<a href="#" class="color-tools"><Icon name="mdi:tools" class="nav-icon"/>Tools</a>
		</nav>
	</header>
	<main>

	</main>
	<footer></footer>
</BaseLayout>
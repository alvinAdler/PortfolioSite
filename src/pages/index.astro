---
import BaseLayout from "../layouts/BaseLayout.astro";
import {Icon} from 'astro-icon'
---

<style lang="scss">
	.main-header{
		min-height: 100vh;
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		row-gap: 5rem;

		h1{
			text-align: center;
		}
	}

	.main-nav{
		display: flex;
		flex-flow: row wrap;
		justify-content: space-evenly;
		width: min(40rem, 80%);
		align-items: stretch;
		gap: 1.5rem 2rem;
	}

	:global(.main-nav > a){
		padding: 0.5rem;
		border: 2px solid transparent;
		display: flex;
		flex-flow: row nowrap;
		justify-content: center;
		align-items: center;
		column-gap: 0.5rem;
		text-decoration: none;
		flex: 1 0 0;
		white-space: nowrap;
		transition: 100ms all ease-in;
	}

	.nav-icon{
		width: 2rem;
		aspect-ratio: 1 / 1;
	}

	main{
		width: min(70rem, 90%);
		margin-inline: auto;
		margin-bottom: 30rem;
	}

	h2{
		color: var(--color-light);
		clip-path: polygon(0 17%, 100% 0, 100% 83%, 0 100%);
		padding: 1rem;
	}

	.about-me-section{
		position: relative;
		display: grid;
		background-color: var(--color-slight);
		border-radius: 5px;
		box-shadow: 7px 7px 30px -10px var(--color-sdark);
		padding: 1rem;
		gap: 0.75rem;
		grid-template-areas:
		"self-pict self-title"
		"self-pict self-desc"
		"self-social self-social";

		& > img{
			grid-area: self-pict;
			width: 20rem;
			display: flex;
			align-items: center;
			aspect-ratio: 1 / 1;
		}

		& > h2{
			background-color: var(--color-about-me);
			grid-area: self-title;
			width: max-content;
			height: min-content;
			margin-block: auto;
		}

		& > .about-me-desc{
			grid-area: self-desc;
			text-align: justify;
		}

		& > .social-info{
			grid-area: self-social;
			background-color: var(--color-about-me);
			border-radius: 5px;
			padding: 0.25rem 0.5rem;
			display: flex;
			flex-flow: row wrap;
			gap: 0.5rem;
			align-items: center;
			margin-left: auto;

			span, .social-icon{
				color: var(--color-light);
			}

			.social-icon{
				width: 2rem;
				aspect-ratio: 1 / 1;
			}
		}
	}
</style>

